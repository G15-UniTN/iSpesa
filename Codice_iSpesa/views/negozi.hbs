<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>iSpesa Negozi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .font-1{
            color: whitesmoke;
        }

        a{
            text-decoration: none;
            display: inline-block;
        }

        ul.nav a:hover{
            color:goldenrod;
        }

        .font-2{
          text-shadow: 0px 0px 6px black;
        }

        .font-3{
          color:black;
        }

        .font-sconto{
          color:red;
          text-decoration: line-through;
          text-align: center;
        }

        .font-prezzo_nuovo{
          color: black;
          text-align: center;
        }

        .font-nome_prodotto{
          color: black;
          overflow: hidden;
          display: -webkit-box;
          -webkit-line-clamp: 2; /* number of lines to show */
                  line-clamp: 2; 
          -webkit-box-orient: vertical;
          text-align: center;
        }

        .font-link{
            color:blue;
            word-wrap: break-word;
            display:inline-block;
        }

        .ritratti-ombra{
          box-shadow: 5px 5px 10px;
        }

        .card-title{
          text-overflow: ellipsis;
          display:-webkit-box;
          overflow: hidden;
          width:100%;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
        }
    </style>
</head>
  <body onload="caricaDati()">{{>header}}
    <nav class="navbar navbar-expand-lg navbar-light bg-dark-subtle">
        <div class="container-fluid">
            <div class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                </div>
            </div>
        </div>
    </nav>
    <div class="container p-0">
        <div class="row" id="listaNegozi">
          <div class="col-2 p-3">
            <div class="card bg-secondary-subtle shadow">
              <img src="/img/logo/conad.png" class="card-img-top p-3" alt="Logo del negozio">
              <div class="card-body">
                <h5 class="card-title">
                  INSERIRE NOME DEL NEGOZIO AAAAAAAAAAAAA
                </h5>
              </div>
            </div>
          </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
      const url_sito = "http://localhost:8080";

      function caricaDati(){
        caricaNegozi();
      }
      
      function caricaNegozi(){
        document.getElementById("listaNegozi").innerHTML = "";
        fetch(url_sito + "/api/trovaTuttiNegozi")
        .then(response => response.json())
        .then(data => {
          var i = 0;
          while(i < 18 && i < data.length){
            var Ubicazione = data[i].Ubicazione;
            var Orari = data[i].Orari;
            var Nome = data[i].Nome;
            var Logo = data[i].logo; // da cambiare in .Logo
            let c1 = document.createElement("div");
            c1.classList.add("col-2", "p-3");
            let c2 = document.createElement("div");
            c2.classList.add("card", "bg-secondary-subtle", "shadow");
            let c3 = document.createElement("div");
            c3.classList.add("container", "p-3");
            let c4 = document.createElement("img");
            c4.classList.add("card-img-top", "p-3");
            c4.src = Logo;
            let c5 = document.createElement("div");
            c5.classList.add("card-body");
            let c6 = document.createElement("h5");
            c6.classList.add("card-title");
            c6.innerHTML = Nome;
            let c8 = document.createElement("h3");
            c8.classList.add("font-prezzo_nuovo", "mb-1");
            c8.innerHTML = Orari;
            i++;
            c1.appendChild(c2);
            c2.appendChild(c3);
            c3.appendChild(c4);
            c2.appendChild(c5);
            c5.appendChild(c6);
            c5.appendChild(c8);
            document.getElementById("listaNegozi").appendChild(c1);
          }
        })
      }
    </script>
  </body>
</html>