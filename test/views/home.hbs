<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .font-1{
            color: whitesmoke;
        }

        a{
            text-decoration: none;
            color:whitesmoke;
            display: inline-block;
        }

        ul.nav a:hover{
            color:goldenrod;
        }

        .carousel-item img{
          max-height:350px;
        }

        .font-2{
          text-shadow: 0px 0px 6px black;
        }

        .font-3{
          color:black;
        }

        .font-sconto{
          color:red;
          text-decoration: line-through;
          text-align: center;
        }

        .font-prezzo_nuovo{
          color: black;
          text-align: center;
        }

        .font-nome_prodotto{
          color: black;
          overflow: hidden;
          display: -webkit-box;
          -webkit-line-clamp: 2; /* number of lines to show */
                  line-clamp: 2; 
          -webkit-box-orient: vertical;
          text-align: center;
        }

        .ritratti-ombra{
          box-shadow: 5px 5px 10px;
        }

        .card-title{
          text-overflow: ellipsis;
          display:-webkit-box;
          overflow: hidden;
          width:100%;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
        }
    </style>
</head>
  <body>{{>header}}
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/img/speck.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="font-2">Speck</h2>
            <h5 class="font-2">Costo €7/kg</h5>
          </div>
        </div>
        <div class="carousel-item">
          <img src="/img/formaggio.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="font-2">Formaggio</h2>
            <h5 class="font-2">Costo €10/kg</h5>
          </div>
        </div>
        <div class="carousel-item">
          <img src="/img/salame.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h2 class="font-2">Salame</h2>
            <h5 class="font-2">Costo €20/kg</h5>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark-subtle">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav nav-tabs me-auto px-2">
            <li class="nav-item px-2">
              <a class="nav-link active">Tutti</a>
            </li>
            <li class="nav-item px-2">
              <a class="nav-link" href="#">Carne</a>
            </li>
            <li class="nav-item px-2">
              <a class="nav-link" href="#">Formaggi</a>
            </li>
            <li class="nav-item px-2">
              <a class="nav-link" href="#">Verdure</a>
            </li>
            <li class="nav-item px-2">
              <a class="nav-link" href="#">Frutta</a>
            </li>
          </ul>
          <div class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          </div>
        </div>
      </div>
    </nav>
    <div class="container p-0">
      <div class="row">
        <div class="col-2 p-3">
            <div class="card bg-secondary-subtle shadow">
                <container class="p-3">
                    <img src="/img/ritratti/speck.jpg" class="card-img-top mw-100 mh-100 rounded-4" alt="Logo del prodotto">
                </container>
                <div class="card-body pt-0 pb-1">
                    <h3 class="font-nome_prodotto">Tortel della Val di Non</h3>
                    <p class="font-sconto mb-0">€18/kg</p>
                    <h3 class="font-prezzo_nuovo mb-1">€16/kg</h3>
                    <p class="card-text"><small class="text-muted">Scade il *data*</small></p>
                </div>
            </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        function sendProdotto(){
            var idProdotto;
            var form;
            form = document.createElement("form");
            form.action = "/prodotto";
            form.method = "post";
            idProdotto.type = "hidden";
            idProdotto.name = "id";
            idProdotto.value = "placeholder";
            form.appendChild(idProdotto);
            form.submit();
        }
    </script>
  </body>
</html>